@model IEnumerable<Backend_Capstone.Models.Recipe>

@{
    ViewData["Title"] = "MyRecipes";
}



<div class="text-center">
    <hr />
    <h1 class="mainContainer">My Recipes</h1>
    <a asp-action="Create"><i class="fas fa-plus"></i>  Add New</a>
</div>

<div class="d-flex overflow-auto flex-wrap justify-content-center">
    <div class="col-11 d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div id="@item.Id" class="card gridCard" style="border-bottom: 4px solid #eabb53;">
                <div class="card-body overflow-hidden">
                    @if (item.ImageUrl != null)
                    {
                        <img src="@Url.Content(item.ImageUrl)" class="card-img-top" />
                    }
                    else
                    {
                        <img src="~/images/CIC_Secondary.jpg" class="card-img-top" />
                    }
                </div>
                <div class="card-body">
                    <h3 class="card-title" style="margin-bottom: 0px;">@item.Title</h3>
                    <p class="card-text font-weight-bold"><small class="text-muted font-weight-bold"><i class="fas fa-clock"></i>  Time: @item.TotalTime minutes</small></p>
                    <p class="card-text text-muted" style="font-size: 12px;">@item.Description</p>
                    <a asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id">View Recipe</a>
                </div>
            </div>
        }
    </div>
</div>